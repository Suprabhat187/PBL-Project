<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Admin Dashboard - Add Student Data</title>
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <link href="/css/font-awesome.min.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <link href="/css/responsive.css" rel="stylesheet" />
    
    <style>
      .admin_section {
        padding: 50px;
      }
      .heading_container {
        margin-bottom: 30px;
      }
      .form-group {
        margin-bottom: 20px;
      }
      .btn {
        padding: 10px 20px;
        font-size: 16px;
      }
    </style>
  </head>

  <body class="sub_page">
    <div class="hero_area">
      <!-- Header -->
      <header class="header_section">
        <div class="container-fluid">
          <nav class="navbar navbar-expand-lg custom_nav-container">
            <a class="navbar-brand" href="/coordinatordash">
              <span></span>
            </a>
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarSupportedContent"
            >
              <span class=""></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/coordinatordash">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/mapping">Student and form access</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/addfaculty">Add Faculty Data</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/addstudent">Add Student Data</a>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </header>
    </div>

    <!-- Admin Section -->
    <section class="admin_section">
      <div class="container">
        <div class="heading_container">
          <h2>Add Student Data</h2>
        </div>
        <form action="/upload-student-data" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="studentFile">Upload Student List (Excel)</label>
            <input
              type="file"
              class="form-control"
              id="studentFile"
              name="studentFile"
              accept=".xls,.xlsx"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </section>

    <!-- Scripts -->
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/custom.js"></script>
  </body>
</html>
