    <section class="admin_section layout_padding">
      <div class="container">
        <div class="heading_container">
          <h2>Add Faculty Data</h2>
        </div>
        <form id="facultyUploadForm" enctype="multipart/form-data">
          <div class="form-group">
            <label for="facultyFile">Upload Faculty List (Excel)</label>
            <input
              type="file"
              class="form-control"
              id="facultyFile"
              name="facultyFile"
              accept=".xls,.xlsx"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="/viewfaculty" class="btn btn-secondary">View</a>
        </form>
      </div>
    </section>

    <script>
      document
        .getElementById("facultyUploadForm")
        .addEventListener("submit", async function (event) {
          event.preventDefault(); // Prevent page reload

          const formData = new FormData(this);

          try {
            const response = await fetch("/upload-faculty", {
              method: "POST",
              body: formData,
            });

            const result = await response.text();

            if (response.ok) {
              alert("✅ Upload submitted successfully!");
            } else {
              alert("❌ Error: " + result);
            }
          } catch (error) {
            alert("❌ Network error, please try again.");
            console.error("Upload error:", error);
          }
        });
    </script>

