<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="icon" href="/images/fevicon.png" type="image/gif" />
    <title>Hostit</title>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <link href="/css/font-awesome.min.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <link href="/css/responsive.css" rel="stylesheet" />
    <style>
      body {
          background-color: #020230;
          color: #020230;
      }
      .logged-in-info {
          background: rgba(200, 200, 200, 0.3);
          padding: 6px 12px;
          border-radius: 8px;
          font-size: 14px;
          font-weight: 500;
          margin-left: 15px;
          color: white;
      }
      .navbar-nav .nav-item {
          margin-right: 20px;
      }
      .navbar-nav .nav-link {
          color: white !important;
          font-weight: 500;
      }
  </style>
  </head>
  <body>
    <% if (!user || user.role !== "admin") { %>
      <script>
          alert("‚ùå Access Denied: Please log in as Admin.");
          window.location.href = "/login";
      </script>
    <% } %>
    <div class="hero_area">
      <header class="header_section">
        <div class="container-fluid">
          <nav class="navbar navbar-expand-lg custom_nav-container">
            <span>
              <img
                src="/images/symbilogo.jpg"
                alt="Logo"
                class="logo"
                style="width: 50px; height: auto"
              />
            </span>
            <% if (user) { %>
              <span class="logged-in-info">Logged in as: <%= user.email %></span>
            <% } %>
            <a class="navbar-brand" href="/"> </a>
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class=""> </span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="/admindash">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/viewfacultyadmin">Faculty List</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/viewstudentadmin">Student List</a>
                </li>
                <!-- <li class="nav-item"><a class="nav-link" href="/viewdetails">Student Details</a></li> -->
                <li class="nav-item">
                  <a class="nav-link" href="/result">Result Details</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#" onclick="confirmLogout()">Logout</a>
              </li>
              </ul>
            </div>
          </nav>
        </div>
      </header>
      <section class="slider_section">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <div class="detail-box">
                <h1 style="font-size: 3rem; font-weight: bold;">
                  Welcome to <br />
                  Admin Dashboard
                </h1>                
                <p>Manage faculty, students, and data efficiently.</p>
                <div class="btn-box"></div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="img-box">
                <img src="/images/slider-img.png" alt="Admin Dashboard Image" />
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <footer class="footer_section">
      <div class="container">
        <p>&copy; <span id="displayYear"></span> All Rights Reserved.</p>
      </div>
    </footer>
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/custom.js"></script>
    <script>
      function confirmLogout() {
      if (confirm("Are you sure you want to logout?")) {
          window.location.href = "/logout";
      }
  }
  </script>
  </body>
</html>
